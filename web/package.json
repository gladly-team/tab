{
  "name": "tab-web",
  "version": "0.1.0",
  "description": "Web app for Tab for a Cause.",
  "private": true,
  "devDependencies": {
    "babel-plugin-relay": "^4.0.0",
    "chromedriver": "^76.0.1",
    "codecov": "^3.5.0",
    "cross-env": "^5.2.0",
    "cross-var": "^1.1.0",
    "dotenv-extended": "^2.4.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "1.11.2",
    "enzyme-to-json": "^3.3.4",
    "eslint-plugin-prettier": "^3.1.0",
    "graphql": "^14.3.0",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "minimist": "^1.2.0",
    "mockdate": "^2.0.2",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.3",
    "patch-package": "^6.2.1",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "1.17.1",
    "react-scripts": "^3.0.1",
    "react-snap": "^1.23.0",
    "relay-compiler": "^4.0.0",
    "relay-runtime": "^4.0.0",
    "selenium-webdriver": "^4.0.0-alpha.5",
    "serverless": "^1.42.3",
    "source-map-explorer": "^1.8.0"
  },
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.1",
    "@material-ui/lab": "^3.0.0-alpha.30",
    "blockadblock": "^3.2.1",
    "browser-detect": "^0.2.28",
    "firebase": "^6.0.2",
    "hex-to-rgba": "^1.0.2",
    "history": "^4.9.0",
    "lodash": "^4.17.11",
    "material-ui": "^0.19.4",
    "mdi-material-ui": "^5.11.0",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "qs": "^6.7.0",
    "raven-js": "^3.24.0",
    "react": "^16.8.6",
    "react-color": "^2.17.3",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.8.6",
    "react-firebaseui": "^3.1.2",
    "react-ga": "^2.5.7",
    "react-helmet": "^6.0.0-beta",
    "react-joyride": "2.0.5",
    "react-measure": "2.1.3",
    "react-relay": "^4.0.0",
    "react-router": "^5.0.0",
    "react-router-dom": "5.0.0",
    "react-sparkle": "^1.0.5",
    "react-transition-group": "^4.0.1",
    "relay-commit-mutation-promise": "^1.0.1",
    "sanitize-html": "^1.20.1",
    "tab-ads": "^0.3.0",
    "tti-polyfill": "^0.2.2",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "echo \"Run either start:newtab or start:search\"",
    "start:newtab": "yarn run relay && nodemon --watch data/schema.graphql --exec yarn run start:newtab:react-scripts & yarn run relay:watch",
    "start:newtab:react-scripts": "REACT_APP_WHICH_APP=newtab react-scripts start",
    "start:search": "yarn run relay && nodemon --watch data/schema.graphql --exec yarn run start:search:react-scripts & yarn run relay:watch",
    "start:search:react-scripts": "REACT_APP_WHICH_APP=search react-scripts start",
    "build": "echo \"Run either build:newtab or build:search\"",
    "build:newtab": "yarn run relay --watchman false && node scripts/build.js --app newtab",
    "build:search": "yarn run relay --watchman false && node scripts/build.js --app search",
    "serve": "echo \"Serving from build. Note that http-server must be installed globally. Also note: the proxying currently only fully works for the newtab app.\" && http-server build -p 5000 -i --proxy http://localhost:5000/newtab/?",
    "eject": "react-scripts eject",
    "bundle:analyze": "source-map-explorer",
    "bundle:analyze-buddy": "bundle-buddy build/**/*.map",
    "postinstall": "patch-package",
    "deploy": "npm-run-all -s sls:deploy build:newtab deploy:newtab build:search deploy:search",
    "deploy:newtab": "node scripts/syncToS3.js --app newtab",
    "deploy:search": "node scripts/syncToS3.js --app search",
    "relay": "relay-compiler --src ./src/ --schema ./data/schema.graphql",
    "relay:watch": "nodemon --watch src/ --watch data/schema.graphql --ignore **/__generated__/**/* --exec \"yarn run relay\"",
    "test": "npm-run-all -s format:check test:run test:codecov",
    "test:run": "react-scripts test --env=jsdom --testPathIgnorePatterns=e2e-tests --maxWorkers=2 --coverage --watchAll=false",
    "test:integration": "dotenv-extended --defaults=./.env --path=./.env.local react-scripts test --testPathPattern=e2e-tests --watchAll=false",
    "test:integration:newtab": "yarn run test:integration --testPathIgnorePatterns=search",
    "test:integration:search": "yarn run test:integration --testPathIgnorePatterns=basics",
    "test:codecov": "if-env LOG_TEST_COVERAGE=true && codecov || echo 'Skipping test coverage logging.'",
    "test:watch": "react-scripts test --env=jsdom --testPathIgnorePatterns=e2e-tests --watch",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:fix": "yarn run format --write",
    "format:check": "yarn run format --list-different",
    "sls:deploy": "serverless deploy -v",
    "dev:add-local-dep": "yalc add",
    "dev:update-local-deps": "yalc update"
  },
  "proxy": "http://localhost:8080",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/__generated__/**"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "reactSnap": {
    "include": [
      "/"
    ],
    "publicPath": "/search/",
    "skipThirdPartyRequests": true,
    "source": "build/search",
    "viewport": {
      "width": 1440,
      "height": 798
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gladly-team/tab.git"
  },
  "author": "Gladly Team",
  "bugs": {
    "url": "https://github.com/gladly-team/tab/issues"
  },
  "optionalDependencies": {
    "material-ui-codemod": "^1.0.0-beta.11"
  }
}
