{
  "name": "tab-graphql",
  "version": "0.1.0",
  "description": "GraphQL server for Tab for a Cause.",
  "private": true,
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "@hapi/joi": "^17.1.1",
    "@sendgrid/mail": "^7.4.4",
    "@sentry/node": "^5.14.2",
    "aws-sdk": "^2.632.0",
    "aws4": "^1.8.0",
    "babel-watch": "^7.5.0",
    "bluebird": "^3.5.4",
    "consent-string": "^1.4.2",
    "cors": "^2.8.5",
    "dotenv-extended": "^2.4.0",
    "dynogels": "^9.0.0",
    "graphql": "^14.3.0",
    "graphql-relay": "^0.6.0",
    "joi": "^14.3.1",
    "jssha": "^3.2.0",
    "lodash": "^4.17.21",
    "moment": "^2.24.0",
    "nanoid": "^3.1.23",
    "node-fetch": "^2.6.1",
    "uuid": "3.3.2",
    "xss-filters": "^1.2.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/node": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.8.0",
    "body-parser": "^1.19.0",
    "chokidar": "^3.0.0",
    "codecov": "^3.7.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "express": "^4.17.0",
    "express-graphql": "^0.8.0",
    "if-env": "^1.0.4",
    "jest": "^24.8.0",
    "jwt-decode": "^2.2.0",
    "mkdirp": "^0.5.1",
    "mockdate": "^2.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "1.17.1",
    "require-clean": "^0.1.3",
    "serverless": "^1.67.0",
    "serverless-plugin-include-dependencies": "^3.2.1",
    "serverless-prune-plugin": "^1.4.1"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](build|config|node_modules)[/\\\\]"
    ],
    "testEnvironment": "node"
  },
  "scripts": {
    "start": "babel-watch ./server.js",
    "build": "rm -rf ./build && yarn run build:run",
    "build:run": "cross-env NODE_ENV=production babel --out-dir='build' ./ && yarn run build:copy-cpm-codes  && yarn run build:config",
    "build:copy-markdown": "babel --out-dir='build' ./ --include='**/*.md'",
    "build:copy-cpm-codes": "cp ./database/userRevenue/amazon-cpm-codes.json ./build/database/userRevenue/amazon-cpm-codes.json",
    "build:config": "NODE_ENV=production node -r dotenv-extended/config ./scripts/generateConfig.js",
    "deploy": "yarn run build && serverless deploy -v",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "test": "npm-run-all -s lint test:run test:codecov",
    "test:run": "jest --testPathIgnorePatterns=integration-tests --maxWorkers=2 --coverage --watchAll=false",
    "test:integration": "echo \"Not running integration tests.\"",
    "test:integration:enable-when-fixed": "jest --testPathPattern=integration-tests --coverage",
    "test:codecov": "if-env LOG_TEST_COVERAGE=true && codecov || echo 'Skipping test coverage logging.'",
    "test:watch": "jest --testPathIgnorePatterns=integration-tests --watch",
    "format": "prettier \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:fix": "yarn run format --write",
    "lint": "eslint \"**/*.{js,jsx}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gladly-team/tab.git"
  },
  "author": "Gladly Team",
  "bugs": {
    "url": "https://github.com/gladly-team/tab/issues"
  },
  "homepage": "https://github.com/gladly-team/tab#readme"
}
